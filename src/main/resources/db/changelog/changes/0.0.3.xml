<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="c19be420-3337-4267-930b-00b368bd6aae" author="hudsonalves">

        <createTable tableName="notifications">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="read" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_notifications_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>

        <createSequence sequenceName="notifications_id_seq" startValue="1"/>
    </changeSet>

</databaseChangeLog>
